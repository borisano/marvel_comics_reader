<div class="comic" data-controller="favorite" data-comic-id="<%= comic[:id] %>" data-favorite-is-favorite="<%= comic[:favorited] ? '1' : '0' %>">
  <div class="comic-image-container">
    <%= image_tag comic[:cover_url], class: 'img-fluid' %>
    <button data-favorite-target="favButton"
            data-action="click->favorite#toggleFav"
            class="fav-button">
      <span data-favorite-target="favCount" class="fav-count"><%= comic[:fav_count] || 0 %></span>
      <span data-favorite-target="favIcon" class="fav-icon"></span>
    </button>
  </div>
  <h5><%= comic[:title] %></h5>
</div>